<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WaitingPODetails">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Order Details"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_po_box"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase Order ID"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvpoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_date_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatch Date"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvdispatchdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_date_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received Date"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvreceiveddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_supplier"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvsuppliername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_custom_agent"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FCA"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvfcaname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_box_material"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvmaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_quantity"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity (KG)"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/tvquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Upload Port Clearence Documents"
        android:textColor="#ffffff"
        android:background="@drawable/buttonbg"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="10dp"
        android:onClick="uploadIntent"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_camera_white_24dp"/>

    <Button
        android:id="@+id/btndownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Download P.O. Invoice"
        android:textColor="#ffffff"
        android:background="@drawable/buttonbg"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:onClick="Download"
        android:drawableLeft="@drawable/ic_file_download_white_24dp"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To release the P.O. click on the below button !"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <!--<ImageButton
        android:id="@+id/imageButton"
        android:layout_marginTop="10dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/releasebutton"
        android:cropToPadding="true"
        android:background="#fafafa"
        android:layout_marginBottom="10dp"/>
-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:backgroundTint="#fafafa"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_release"
        />

</LinearLayout>
</ScrollView>